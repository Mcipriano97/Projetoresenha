@{
    var title = ViewData["Title"]?.ToString() ?? "Projetoresenha";
}
<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Projetoresenha</title>

    <!-- Bootstrap via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- seu CSS opcional -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">ProjetoResenha</a>
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navMain"><span class="navbar-toggler-icon"></span></button>
                <div id="navMain" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Livros">Livros</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Sobre">Sobre</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Login">Entrar</a></li>
                        <li class="nav-item"><a class="btn btn-success ms-lg-2" asp-controller="Home" asp-action="Cadastro">Criar conta</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-fill py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-white-50 py-3 mt-auto">
        <div class="container">© @DateTime.Now.Year — Projetoresenha</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
