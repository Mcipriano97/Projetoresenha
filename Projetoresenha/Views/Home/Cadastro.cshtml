@model CadastroViewModel
@{
    ViewData["Title"] = "Cadastro";
}
<section class="py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="h3 mb-3">Criar conta</h1>

                    <form asp-action="Cadastro" asp-controller="Home" method="post" asp-antiforgery="true" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nome" class="form-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Sobrenome" class="form-label"></label>
                                <input asp-for="Sobrenome" class="form-control" />
                                <span asp-validation-for="Sobrenome" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Senha" class="form-label"></label>
                                <input asp-for="Senha" class="form-control" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="ConfirmacaoSenha" class="form-label"></label>
                                <input asp-for="ConfirmacaoSenha" class="form-control" />
                                <span asp-validation-for="ConfirmacaoSenha" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-success">Cadastrar</button>
                            <a asp-controller="Home" asp-action="Login" class="btn btn-outline-secondary">Já tenho conta</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="small">← Voltar</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
